{
  "name": "@webpack-contrib/eslint-config-webpack",
  "version": "3.0.0",
  "description": "Provides Webpacks's .eslintrc as an extensible shared config",
  "license": "MIT",
  "repository": "webpack-contrib/eslint-config-webpack",
  "author": "Joshua Wiens (https://twitter.com/@d3viant0ne)",
  "homepage": "https://github.com/webpack-contrib/eslint-config-webpack",
  "bugs": "https://github.com/webpack-contrib/eslint-config-webpack/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/webpack"
  },
  "main": "index.js",
  "engines": {
    "node": ">= 18.12.0"
  },
  "scripts": {
    "commitlint": "commitlint --from=master",
    "security": "npm audit",
    "lint:prettier": "prettier -w --list-different .",
    "lint:js": "eslint --cache .",
    "lint": "npm-run-all -l -p \"lint:**\"",
    "fix:js": "npm run lint:js -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix": "npm-run-all -l fix:js fix:prettier",
    "test": "npm run lint",
    "prepare": "husky",
    "release": "standard-version"
  },
  "files": [
    "index.js",
    "rules"
  ],
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "config",
    "webpack",
    "javascirpt"
  ]
}
